<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Style -->
    <style name="Widget.HesApp.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/maya_blue</item>
        <item name="elevation">8dp</item>
    </style>
    <!-- Material Button Styles -->
    <style name="Widget.HesApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Widget.HesApp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!-- Material Card Styles -->
    <style name="Widget.HesApp.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/maya_blue</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <!-- Material Chip Styles -->
    <style name="Widget.HesApp.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/maya_blue</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!-- Floating Action Button Style -->
    <style name="Widget.HesApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
    </style>
    <!-- Search View Style -->
    <style name="Widget.HesApp.SearchView" parent="Widget.Material3.SearchView">
        <item name="android:background">@color/surface</item>
        <item name="queryBackground">@color/surface_variant</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textColorHint">@color/on_surface_variant</item>
    </style>
</resources> 