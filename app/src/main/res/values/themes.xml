<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Error colors. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Material Design 3 specific attributes -->
        <item name="colorPrimaryContainer">@color/light_blue</item>
        <item name="colorOnPrimaryContainer">@color/on_background</item>
        <item name="colorSecondaryContainer">@color/light_purple</item>
        <item name="colorOnSecondaryContainer">@color/on_background</item>
        <item name="colorTertiary">@color/light_pink</item>
        <item name="colorOnTertiary">@color/on_background</item>
        <item name="colorTertiaryContainer">@color/medium_pink</item>
        <item name="colorOnTertiaryContainer">@color/on_background</item>
        
        <!-- Card and elevation colors -->
        <item name="colorSurfaceContainer">@color/surface_variant</item>
        <item name="colorSurfaceContainerHigh">@color/surface</item>
        <item name="colorSurfaceContainerHighest">@color/surface</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/light_purple</item>
        <item name="colorOutlineVariant">@color/light_blue</item>
        
        <!-- Scrim color (optional, fallback to default if not present) -->
        <!-- <item name="colorScrim">#52000000</item> -->
        
        <!-- Custom text appearance -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.HesApp.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.HesApp.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.HesApp.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.HesApp.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.HesApp.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.HesApp.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.HesApp.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.HesApp.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.HesApp.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.HesApp.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.HesApp.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.HesApp.LabelSmall</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.HesApp.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HesApp.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HesApp.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HesApp.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HesApp.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>