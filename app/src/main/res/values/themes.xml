<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar ayarlarÄ± -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Poppins Font Ailesi -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        
        <!-- TextAppearance Overrides -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.HesApp.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.HesApp.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.HesApp.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.HesApp.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.HesApp.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.HesApp.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.HesApp.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.HesApp.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.HesApp.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.HesApp.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.HesApp.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.HesApp.LabelSmall</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/on_background</item>
