<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <!-- Hızlı İşlem Butonları (Üste alındı) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Hızlı İşlemler"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <!-- 1. Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddIncome"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:layout_height="wrap_content"
                            android:text="Gelir"
                            app:icon="@drawable/ic_add" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddExpense"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:text="Gider"
                            app:icon="@drawable/ic_add" />
                    </LinearLayout>

                    <!-- 2. Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddSale"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:layout_height="wrap_content"
                            android:text="Satış"
                            app:icon="@drawable/ic_add" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddContact"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:text="Kişi"
                            app:icon="@drawable/ic_add" />
                    </LinearLayout>

                    <!-- 3. Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAccounts"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:layout_height="wrap_content"
                            android:text="Hesaplar"
                            app:icon="@drawable/ic_account" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPayment"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:text="Ödeme Yap"
                            app:icon="@drawable/ic_debt" />
                    </LinearLayout>

                    <!-- 4. Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCollection"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:layout_height="wrap_content"
                            android:text="Tahsilat Al"
                            app:icon="@drawable/ic_receivable" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewReports"
                            style="@style/Widget.HesApp.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:text="Raporlar"
                            app:icon="@drawable/ic_reports" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hoş Geldiniz Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoş Geldiniz!"
                        android:textAppearance="@style/TextAppearance.HesApp.HeadlineSmall"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="HesApp ile finansal durumunuzu takip edin"
                        android:textAppearance="@style/TextAppearance.HesApp.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Finansal Özet Kartları -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Gelir Kartı -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_income"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/income"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvTotalIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0 ₺"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Gider Kartı -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_expense"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expense"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvTotalExpense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0 ₺"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Net Durum Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_net"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Net Durum"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvNetAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 ₺"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Borç/Alacak Kartları -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Borç Kartı -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_debt"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/debt"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvTotalDebt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0 ₺"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Alacak Kartı -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_receivable"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/receivable"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvTotalReceivable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0 ₺"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Borç/Alacak Sonrası Net Durum Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_net"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Borç/Alacak Sonrası Net Durum"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvNetAmountAfterDebt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 ₺"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- İstatistik Kartları -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Son İşlemler -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Son 30 Gündeki İşlem"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvRecentTransactions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Toplam İşlemler -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toplam İşlem"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvTotalTransactions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Kişi Sayısı Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toplam Kişi"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvTotalContacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
